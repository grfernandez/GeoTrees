FROM python:3.9-slim

# Establece el directorio de trabajo en el contenedor
WORKDIR /app

# Copia el archivo de requerimientos dentro del contenedor
COPY requirements.txt requirements.txt

# Instala las dependencias
RUN pip install --no-cache-dir -r requirements.txt

# Establece el directorio de trabajo
WORKDIR /app

# Copia el resto de la aplicaci贸n
COPY ./app /app

# Expone el puerto 5000 para la aplicaci贸n Flask
EXPOSE 5000

# Establece la variable de entorno para habilitar el modo de depuraci贸n
ENV FLASK_ENV=development

# Configura el comando por defecto para ejecutar la aplicaci贸n
CMD ["flask", "run", "--host=0.0.0.0"]

